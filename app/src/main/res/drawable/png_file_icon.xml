<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners 
                android:topLeftRadius="12dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="12dp"
                android:bottomRightRadius="12dp" />
        </shape>
    </item>
    
    <!-- Main document shape -->
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" />
            <corners 
                android:topLeftRadius="12dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="12dp"
                android:bottomRightRadius="12dp" />
            <stroke 
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Folded corner triangle -->
    <item android:right="4dp" android:bottom="4dp" android:top="0dp">
        <inset android:insetRight="0dp" android:insetTop="0dp">
            <rotate android:fromDegrees="0">
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0" />
                </shape>
            </rotate>
        </inset>
    </item>
    
    <!-- Corner fold line -->
    <item android:right="4dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#D5D5D5" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Image preview frame -->
    <item android:left="20dp" android:top="50dp" android:right="24dp" android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="2dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Ocean image background -->
    <item android:left="24dp" android:top="54dp" android:right="28dp" android:bottom="104dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#87CEEB"
                android:centerColor="#4682B4"
                android:endColor="#1E4D72"
                android:angle="270" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
    <!-- Magnifying glass base circle -->
    <item android:left="110dp" android:top="90dp" android:right="40dp" android:bottom="80dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke 
                android:width="6dp"
                android:color="#2C2C2C" />
        </shape>
    </item>
    
    <!-- Magnifying glass inner circle -->
    <item android:left="118dp" android:top="98dp" android:right="48dp" android:bottom="88dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Magnifying glass handle -->
    <item android:left="135dp" android:top="110dp" android:right="25dp" android:bottom="70dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#2C2C2C" />
                <size android:width="8dp" android:height="25dp" />
                <corners android:radius="4dp" />
            </shape>
        </rotate>
    </item>
</layer-list>